render: text => {
  const lines = Array.isArray(text) ? text : [text];
  return (
    <div style={{ display: 'flex', flexDirection: 'column', gap: '2px' }}>
      {lines.map((line, i) => (
        <div
          key={i}
          style={{
            border: '1px solid #d9d9d9',
            padding: '4px',
            borderRadius: '4px',
            background: '#fafafa',
          }}
        >
          {getWordSpans(line, reference, i)}
        </div>
      ))}
    </div>
  );
}
